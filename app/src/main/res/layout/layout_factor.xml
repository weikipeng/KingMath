<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/colorBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/cutLine"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBackgroundBoard"/>


    <TextView
        android:id="@+id/title"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/cutLine"
        android:layout_toStartOf="@id/cutLine"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        tools:text="标题"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/cutLine"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/unit"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            tools:text="元/度"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/unit">

            <EditText
                android:id="@+id/value"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:visibility="gone"
                tools:text="30"/>

            <TextView
                android:id="@+id/valueText"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                tools:text="30"/>
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackgroundBoard"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundBoard"/>

</RelativeLayout>